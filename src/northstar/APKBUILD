# Maintainer: pg9182 <96569817+pg9182@users.noreply.github.com>
pkgname=northstar
pkgver=1.31.4.6
pkgver_tf=2.0.11.0
pkgver_ns="${pkgver%.*}"
pkgrel=0
pkgdesc="Northstar binaries and mods"
pkgver_ion="${pkgver##*.}"

url="https://github.com/sonny-tel/Ion"
license="MIT"

arch="x86_64"
source="https://github.com/sonny-tel/Ion/releases/download/v${pkgver_ns}_${pkgver_ion}/Ion.release.v${pkgver_ns}.zip"

check() {
	ls "$srcdir"
	test -f "$srcdir/NorthstarLauncher.exe"
	test -f "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/cfg/autoexec_ns_server.cfg"
	test -d "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/maps/graphs"
	test -d "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/maps/navmesh"
	test -f "$srcdir/bin/x64_dedi/d3d11.dll"
}

package() {
	rm "$srcdir"/*.zip
	mkdir -p "$pkgdir/usr/lib/northstar"
	cp -r "$srcdir/." "$pkgdir/usr/lib/northstar/"
}
sha512sums="
72778138ca8c3d637b457cada4d5698a4e230dfa619ac5e4f2a2fbd29ac7e253e40566d23d7f137e30e86ff4f98decfd191b588ed2c6bb4a587dc5947ef96263  Ion.release.v$pkgver_ns.zip
"
